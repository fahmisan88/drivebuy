<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-normal btn-success" data-toggle="modal" data-target="#myModal">
  Add Meal
</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-left">Add Meal</h4>
      </div>
      <div class="modal-body">
        <%= form_for @meal do |f| %>
        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, autofocus: true, placeholder: "Meal Name", class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <label>Description</label>&nbsp;<small>(optional)</small>
          <%= f.text_area :desc, autofocus: true, placeholder: "Meal Description", class: "form-control" %>
        </div>

        <div class="form-group">
          <label>Meal Code</label>&nbsp;<small>(optional)</small>
          <%= f.text_field :code, autofocus: true, placeholder: "Meal Code", class: "form-control" %>
        </div>

        <div class="form-group">
          <label>Type</label>
          <%= f.select :meal_type, ["Food", "Drink"], prompt: "Select...", class: "form-control "%>
        </div>

        <div class="form-group">
          <label>Price</label>
          <%= f.text_field :price, autofocus: true, placeholder: "Meal Price", class: "form-control", required: true %>
        </div>

        <div class="text-center">
          <%= f.submit "Submit", class: "btn btn-normal btn-block" %>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
