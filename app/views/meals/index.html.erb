<div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-6">
      <div class="pull-right">
        <%= link_to "Add Meal", new_meal_path, class: "btn btn-normal btn-success" %>
      </div>
    </div>
</div><br>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Menu
      </div>
      <div class="panel-body">
        <% @meals.each do |meal| %>
          <div class="row">
            <div class="col-md-8">
              <h4><%= link_to meal.name, edit_meal_path(meal) %></h4>
              <p><%= meal.desc %></p>
            </div>
            <div class="col-md-2">
              <br>
              RM<%= meal.price %>
            </div>
            <div class="col-md-2 right">
              <% if meal.available %>
                <%= link_to "Disable", disable_meal_path(meal), method: :post, class: "btn btn-info btn-small" %>
              <% else %>
                <%= link_to "Enable", enable_meal_path(meal), method: :post, class: "btn btn-info btn-small" %>
              <% end %>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
