<div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-6">
      <div class="pull-right">
        <%= render partial: "form" %>
      </div>
    </div>
</div><br>


<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Foods
        <br>
      </div>
      <div class="panel-body">
        <div>
          <div style="overflow-x:auto;">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Code</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <%@foods.each_with_index do |food, index|%>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= !food.code.blank? ? food.code : "N/A" %></td>
                  <td><%= link_to food.name, meal_path(food) %></td>
                  <td><%= !food.desc.blank? ? food.desc : "N/A" %></td>
                  <td><%= food.price %></td>
                  <td>
                    <% if food.available %>
                      <%= link_to "Disable", disable_meal_path(food), method: :post, class: "btn-link" %>
                    <% else %>
                      <%= link_to "Enable", enable_meal_path(food), method: :post, class: "btn-link" %>
                    <% end %>
                  </td>
                </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

